<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreTestSave">

    <!-- Title Bar -->
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D1C4E9"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:src="@drawable/back_button"
            android:scaleType="fitCenter"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모의고사 분석"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:padding="4px" />

    </RelativeLayout>

    <!-- Test Setting Form -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/Testform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Period -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시기"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/testperiod_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="2024년4학년1학기"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <!-- Grades and Scores Table -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,3">

                <!-- 국어 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국어 등급"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/language_grade_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="1"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국어 점수"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/language_score_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="85"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                </TableRow>

                <!-- 수학 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수학 등급"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/math_grade_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="2"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수학 점수"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/math_score_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="90"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                </TableRow>

                <!-- 영어 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영어 등급"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/english_edit_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="1"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영어 점수"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/english_score_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="88"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                </TableRow>

                <!-- 한국사 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한국사 등급"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/korean_history_grade_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="3"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한국사 점수"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/korean_history_score_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="85"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                </TableRow>

                <!-- 과학 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="과학 등급"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/science_grade_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="2"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="과학 점수"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/science_score_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="92"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:background="@android:drawable/edit_text" />
                </TableRow>
            </TableLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/save_button"
                android:padding="4dp"
                android:text="저장"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="gone"
                android:layout_gravity="end"
                android:padding="4dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/nav_button1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/score_button"/>


        <ImageButton
            android:id="@+id/nav_button3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/home_button"/>

        <ImageButton
            android:id="@+id/nav_button4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/plan_button"/>

        <ImageButton
            android:id="@+id/nav_button5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>